<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#91FF47"
    tools:context="com.example.adam.project.new_game.AddToRankingActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/add_to_ranking_score"
        android:gravity="center"
        android:textColor="#FF9812"
        android:textSize="35dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/add_to_ranking_label"
        android:text="Good Job! Enter Your Name."
        android:textColor="#414Ff7"
        android:gravity="center"
        android:textSize="28dp"
        android:layout_below="@+id/add_to_ranking_score"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/add_to_ranking_editText"
        android:background="#FFFFFF"
        android:inputType="textCapCharacters"
        android:layout_below="@+id/add_to_ranking_label"
        android:textSize="30dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="Accept"
        android:gravity="center"
        android:textSize="30dp"
        android:background="#FFFF00"
        android:id="@+id/add_to_ranking_button"
        android:layout_below="@+id/add_to_ranking_editText"/>

</RelativeLayout>
