<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.adam.project.new_game.EndedGameActivity">


    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="New Game"
        android:textSize="30dp"
        android:id="@+id/ended_game_newGame"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Main Menu"
        android:textSize="30dp"
        android:layout_below="@+id/ended_game_newGame"
        android:id="@+id/ended_game_mainMenu"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Hall Of Fame"
        android:textSize="30dp"
        android:layout_below="@+id/ended_game_mainMenu"
        android:id="@+id/ended_game_ranking"/>

</RelativeLayout>
